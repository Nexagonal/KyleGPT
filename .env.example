# KyleGPT Server Environment Configuration
# Copy this file to .env and fill in your values

# Server
PORT=3000

# Firebase Service Account (download from Firebase Console → Project Settings → Service Accounts)
FIREBASE_SERVICE_ACCOUNT=./serviceAccountKey.json

# Apple Push Notifications
APN_KEY_ID=YOUR_APN_KEY_ID
APN_TEAM_ID=YOUR_APN_TEAM_ID
BUNDLE_ID=com.example.KyleGPT

# Admin (God Mode Email)
ADMIN_EMAIL=admin@example.com

# SMTP Verification Email (e.g. Brevo)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=login@example.com
SMTP_PASS=your-smtp-master-password
SMTP_FROM_EMAIL=noreply@example.com
